<requestFlow>
	<request type="GET" uri="/appinfo" uriAlias="testAlias">
	</request>
	
	<request type="PUT" uri="/test">		
		<body><![CDATA[Some multi-line
body content
^°~+?ß&/%$§@€
blubb]]></body>
		<detailExtraction name="response" defaultValue="extraction failed">([A-Za-z0-9\s]+)</detailExtraction>
	</request>
	
	<request type="PUT" uri="/test">		
		<body>${response}</body>
	</request>
	
	<request type="GET" uri="/test">
		<header name="Accept">text/plain</header>
		<param name="Content">application/xml</param>
		<detailExtraction name="extractedValue" defaultValue="123456">(\b[\d]+\b)</detailExtraction>
	</request>
	
	<!-- using extracted value from last response -->
	<request type="GET" uri="/garbage/${extractedValue}">
	</request>
	
	<request type="POST" uri="/test">
	</request>
	
	<request type="DELETE" uri="/test">
	</request>
	
	<request type="GET" uri="/time">
	</request>
	
	<!-- using value which has been loaded programmatically in the RequestFlowEventListener -->
	<request type="GET" uri="/cpuload/${value}">
	</request>
	
</requestFlow>